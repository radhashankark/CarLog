<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <Spinner
        android:id="@+id/statsfor"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

    <Spinner
        android:id="@+id/statsunits"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:entries="@array/units"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:paddingLeft="10dp"
            android:text="Mileage"
            android:textSize="16dp"
            android:gravity="left" />

        <TextView
            android:id="@+id/mileage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:paddingRight="10dp"
            android:text="miles/gallon"
            android:textSize="16dp"
            android:gravity="right"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"
                android:text="Distance Travelled"
                android:textSize="16dp"
                android:gravity="left" />

        <TextView
                android:id="@+id/distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:paddingRight="10dp"
                android:text="0 miles"
                android:textSize="16dp"
                android:gravity="right"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"
                android:text="Fuel used"
                android:textSize="16dp"
                android:gravity="left" />

        <TextView
                android:id="@+id/volume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:paddingRight="10dp"
                android:text="0 Gallons"
                android:textSize="16dp"
                android:gravity="right"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"
                android:text="Cost Of Fuel"
                android:textSize="16dp"
                android:gravity="left" />

        <TextView
                android:id="@+id/totalcost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:paddingRight="10dp"
                android:text="$ 0"
                android:textSize="16dp"
                android:gravity="right"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"
                android:text="Stats Window"
                android:textSize="16dp"
                android:gravity="left" />

        <TextView
                android:id="@+id/statswindow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:paddingRight="10dp"
                android:text="2y, 3m, 6d"
                android:textSize="16dp"
                android:gravity="right"/>

    </LinearLayout>

</LinearLayout>